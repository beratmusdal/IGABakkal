@model IGAMarket.WebUI.Models.SingInModelView
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol - IGA Market POS Sistemi</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: url('https://www.igairport.aero/media/5danyaoq/kargo.jpg?format=webp') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .register-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            backdrop-filter: blur(10px);
        }
        .register-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .register-header i {
            font-size: 48px;
            color: #0d6efd;
            margin-bottom: 15px;
        }
        .form-floating {
            margin-bottom: 15px;
        }
        .form-floating input {
            background: rgba(255, 255, 255, 0.9);
        }
        .btn-register {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            background: #0d6efd;
            border: none;
            transition: all 0.3s ease;
        }
        .btn-register:hover {
            background: #0b5ed7;
            transform: translateY(-2px);
        }
        .login-link {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }
        .login-link a {
            color: #0d6efd;
            text-decoration: none;
            font-weight: bold;
        }
        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="register-container">
            <div class="register-header">
                <i class="fas fa-user-plus"></i>
                <h2>IGA Market POS Sistemi</h2>
                <p class="text-muted">Kayıt Ol</p>
            </div>
            <form id="registerForm" asp-action="CreateUser" method="post">
                <div class="form-floating">
                    <input type="text" name="Name" class="form-control" id="name" placeholder="Ad Soyad" required>
                    <label for="name">Ad Soyad</label>
                </div>
                <div class="form-floating">
                    <input type="text" name="UserName" class="form-control" id="username" placeholder="Kullanıcı Adı" required>
                    <label for="username">Kullanıcı Adı</label>
                </div>
                <div class="form-floating">
                    <input type="email" name="Email" class="form-control" id="email" placeholder="E-posta" required>
                    <label for="email">E-posta</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="Password" class="form-control" id="password" placeholder="Şifre" required>
                    <label for="password">Şifre</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Şifre Tekrar" required>
                    <label for="confirmPassword">Şifre Tekrar</label>
                </div>
                <button type="submit" class="btn btn-primary btn-register">
                    <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                </button>
            </form>
            <div class="login-link">
                Zaten hesabınız var mı? <a href="/Login/LoginIndex">Giriş Yap</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>   
</body>
</html> 